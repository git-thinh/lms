{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "sourceRoot": "./",
    "outDir": "./target",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": true,
    "experimentalDecorators": true,
    "declaration": true,
    "jsxFactory": "React.createElement",
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": false
  },
  "exclude": [".next", "dist", "out", "node_modules", "next.config.js", "jest.config.js", "data", "docs", "public"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
